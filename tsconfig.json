{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "sourceRoot": "src",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}